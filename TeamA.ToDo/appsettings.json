{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TodoAppDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Secret": "8fG$3pQl@T9yVz1mN&xE7kR!6bJ5wX0-A539-74D1AAEF4FEC",
    "Issuer": "TodoApp",
    "Audience": "TodoAppClient",
    "ExpiryMinutes": 60
  },
  "EmailSettings": {
    "Provider": "Smtp", // Options: Smtp, SendGrid
    "SenderEmail": "noreply@yourdomain.com",
    "SenderName": "TodoApp",
    "SendGrid": {
      "ApiKey": "your-sendgrid-api-key"
    },
    "Smtp": {
      "Host": "smtp.yourdomain.com",
      "Port": 587,
      "EnableSsl": true,
      "Username": "your-smtp-username",
      "Password": "your-smtp-password"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "AppConfig": {
    "AppName": "Todo App",
    "BaseUrl": "https://yourdomain.com",
    "SupportEmail": "support@yourdomain.com",
    "LogoUrl": "/images/logo.png",
    "SeedSampleData": true,
    "DefaultAdminEmail": "admin@yourtodo.com",
    "DefaultAdminPassword": "Admin123!", // Change this in production immediately,
    "TaskArchiveDays": 90,
    "EnableEmailNotifications": true
  }
}